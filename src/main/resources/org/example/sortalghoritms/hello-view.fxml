<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="577.0" prefWidth="860.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="org.example.sortalghoritms.HelloController">
    <top>
        <GridPane alignment="CENTER" hgap="20" vgap="10">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #eeeeee;" text="Sorting Dashboard" />
            <ProgressBar fx:id="progressBar" prefWidth="400" progress="0.0" GridPane.rowIndex="1" />
            <Label fx:id="progressLabel" style="-fx-font-size: 14px; -fx-text-fill: #eeeeee;" text="Progress: 0%" />
            <Button fx:id="buttonStart" onAction="#onHelloButtonClick" prefHeight="45.0" prefWidth="400.0" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10 20;" text="Run Sorting Algorithms" />
         <columnConstraints>
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </top>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <GridPane fx:id="resultContainer" hgap="20" vgap="20">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
            </GridPane>
        </ScrollPane>
    </center>
</BorderPane>
